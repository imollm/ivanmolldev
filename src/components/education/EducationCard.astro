---
const { title, center, location, fromTo, description, Icon, link } = Astro.props.data
---

<article class='edu-card flex flex-col leading-10 p-5 rounded overflow-hidden shadow-lg bg-white relative'>
    <picture class='education-icons-wrapper flex justify-center items-center h-40'>
        <Icon />
    </picture>
    <div class='flex flex-col grow'>
        <span class='text-lg font-bold text-center h-14'>
            {title}
        </span>
        <ul class='flex flex-col grow bg-zinc-500 p-5 rounded mt-4 shadow-lg'>
            {
                center &&
                <li>
                    <span class='font-bold text-neutral-300'>Where:</span>
                    <span class='text-white'>{center}</span>
                </li>
            }
            {
                location &&
                <li>
                    <span class='font-bold text-neutral-300'>Location:</span>
                    <span class='text-white'>{location}</span>
                </li>
            }
            <li>
                <span class='font-bold text-neutral-300'>When:</span>
                <span class='text-white'>{fromTo}</span>
            </li>
            <li>
                <span class='font-bold text-neutral-300'>What:</span>
                <span class="text-white">{description}</span>
            </li>
        </ul>
    </div>
    <div class='link absolute top-0 left-0 h-full w-full'>
        <div class='flex justify-center items-center h-full w-full bg-zinc-400/70'>
            <a href={link} target='_blank' class='border-2 border-zinc-700 rounded bg-white text-zinc-700 px-3 py-1 hover:cursor-pointer'>
                View credential
            </a>
        </div>
    </div>
</article>
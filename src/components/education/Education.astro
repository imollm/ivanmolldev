---
import Profile from '../../assets/json/profile.js'
import Studies from '@components/education/Studies.astro'
import Licences from '@components/education/Licences.astro'

const { title } = Profile.education
---

<section class='education-component flex flex-col items-center w-full mt-20'>
    <div class='2xl:w-[70%] lg:w-[80%] w-[85%]'>
        <div class='flex flex-col pt-15 gap-4'>
            <h3 class='text-3xl font-bold text-zinc-700 p-2 rounded bg-white w-fit'>
                {title}
            </h3>
            <Studies />
            <Licences />
        </div>
    </div>
</section>
---
import Profile from '../../assets/json/profile.js'
import Studies from '@components/education/Studies.astro'
import Licences from '@components/education/Licences.astro'

const { title, subtitle } = Profile.education
---

<section class='flex flex-col items-center w-full pb-10'>
    <div class='2xl:w-[50%] xl:w-[75%] lg:w-[70%] w-[65%]'>
        <div class='text-center text-zinc-700 pt-20 pb-10'>
            <h1 class='text-5xl font-bold'>
                {title}
            </h1>
            <h4 class='text-3xl mt-5'>
                {subtitle}
            </h4>
        </div>
        <div class='grid grid-cols-2 gap-4 pt-15'>
            <h3 class='text-2xl'>Profile</h3>
            <Studies />
            <Licences />
        </div>
    </div>
</section>
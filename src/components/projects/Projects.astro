---
import Repositories from './Repositories';
import { getRepositoriesService } from '../../services/index'
const repositories = await getRepositoriesService()
---

<section class='projects-component flex flex-col items-center w-full mt-20 pb-10'>
    <div class='2xl:w-[70%] lg:w-[80%] w-[85%]'>
        <div class='flex flex-col pt-15 gap-4'>
            <h3 class='text-3xl font-bold text-zinc-700 p-2 rounded bg-white w-fit border-2 border-zinc-700'>
                Projects
            </h3>
            <Repositories client:load repos={repositories}/>
        </div>
    </div>
</section>
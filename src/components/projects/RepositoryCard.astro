---
import RepoLanguages from "@components/projects/RepoLanguages.astro"
import { Image } from '@astrojs/image/components'
const { repository } = Astro.props
const { name, description, url, languages } = repository
const image = `/assets/img/${name}.png`
---

<a class='repo-details-wrapper' href={url} target='_blank'>
	<article
		class='repo-card h-full flex flex-col leading-10 rounded overflow-hidden shadow-lg bg-white p-4'
	>
		<div class='grid grid-rows-auto'>
			<div class='flex flex-col items-center bg-white text-center rounded'>
				<Image src={image} format="webp" height={100} width={200} alt={name} />
			</div>
			<div class='mt-5 text-center'>
				<span class='text-lg text-zinc-500 font-bold capitalize'>
					{name.replaceAll('-', ' ')}
				</span>
			</div>
		</div>
	</article>
	<div class='repo-details bg-zinc-500 rounded'>
		<div class='flex flex-col justify-evenly p-3'>
			<div class='flex flex-col gap-1 rounded bg-zinc-100 p-2'>
				<span class='font-bold'>Description:</span>
				<span>{description}</span>
			</div>
			<div>
				<RepoLanguages languages={languages.nodes} />
			</div>
		</div>
	</div>
</a>

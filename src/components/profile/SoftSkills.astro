---
import CardHeader from '@components/CardHeader.astro';
import Profile from '../../assets/json/profile.js'

const { softSkills } = Profile.profile
const { title, subtitle } = Profile.profile.softSkills
---

<div id='softskills-component' class='profile-component lg:col-auto col-span-2 flex flex-col bg-zinc-700 rounded p-8'>
    <CardHeader title={title} subtitle={subtitle} client:visible />
    <div class='grow mt-5'>
        <ul class='list-disc h-full grid grid-rows-auto p-5 bg-white rounded'>
            {
                softSkills.content.map(item => {
                    return (
                        <li class='leading-7 list-none'>
                            <span class='font-bold'>{item.value}:</span>
                            <span class='font-normal'> {item.description}</span>
                        </li>
                    )
                })
            }
        </ul>
    </div>
</div>
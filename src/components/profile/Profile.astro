---
import Profile from '../../assets/json/profile.js'
import MySelf from '@components/profile/MySelf.astro'
import SoftSkills from '@components/profile/SoftSkills.astro'
import HardSkills from '@components/profile/HardSkills.astro'

const { title, subtitle } = Profile.profile
---

<section class='profile-component flex flex-col items-center w-full'>
    <div class='2xl:w-[70%] lg:w-[80%] w-[85%]'>
        <div class='text-center text-zinc-700 pt-20 pb-10'>
            <h1 class='mid-md:text-5xl md:text-4xl text-3xl font-bold'>
                {title}
            </h1>
            <h4 class='mid-md:text-3xl md:text-2xl text-xl mt-5'>
                {subtitle}
            </h4>
        </div>
        <div class='grid grid-cols-2 gap-4 pt-15'>
            <h3 class='text-3xl font-bold text-zinc-700 p-2 rounded bg-white w-fit border-2 border-zinc-700'>
                Profile
            </h3>
            <MySelf />
            <SoftSkills />
            <HardSkills />
        </div>
    </div>
</section>